{
	"http": {
		"max_body": 10000,
		"servers": [
        {
            "name": "localhost",
            "listen": 80,
            "locations": {
                "/": {
                    "root": "/home/abobas/webserver/data",
                    "index": "index.html",
                    "accepted-methods": ["GET", "HEAD", "POST", "PUT"],
                    "autoindex": false
                },

                "/proxy": {
					"accepted-methods": ["GET", "HEAD", "POST", "PUT"],
					"proxy_pass": "127.0.0.1"
                }
            }
        },
		{
            "name": "localhost",
            "listen": 443,
            "locations": {
                "/": {
                    "root": "/home/abobas/webserver/data",
					"index": "index.html",
					"accepted-methods": ["GET", "HEAD", "POST", "PUT"],
                    "autoindex": true
                }
            }
        }
	],
		"cgi": {
			"files": {
				".php": {
					"path": "/home/abobas/webserver/data/cgi-bin/test.php",
					"accepted-methods": ["GET", "POST"]
				},

				".pl": {
					"path": "/home/abobas/webserver/data/cgi-bin/test.pl",
					"accepted-methods": ["GET", "POST"]
				}
			},
			"cgi_params": {
				"GATEWAY_INTERFACE": "CGI/1.1",
				"SERVER_PROTOCOL": "HTTP/1.1",
				"SERVER_SOFTWARE": "bigkahuna-latest"
			}
			
		}
	}
}